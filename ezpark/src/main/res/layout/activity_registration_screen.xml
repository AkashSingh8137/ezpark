<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white"
    tools:context=".RegistrationScreen">


    <TextView
        android:id="@+id/signup"
        android:layout_width="206dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="108dp"
        android:text="@string/sign_up"
        android:textColor="@color/blue"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/signupname"
        android:layout_width="382dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="178dp"
        android:textColor="@color/blue"
        android:paddingLeft="10dp"
        android:background="@drawable/login"
        android:ems="10"
        android:hint="@string/signinname"
        android:inputType="textPersonName"
        android:textColorHint="@color/blue"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/signupemail"
        android:layout_width="382dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="236dp"
        android:background="@drawable/login"
        android:textColor="@color/blue"
        android:paddingLeft="10dp"
        android:ems="10"
        android:hint="@string/signupemail"
        android:inputType="textPersonName"
        android:textColorHint="@color/blue"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/signupnumber"
        android:layout_width="382dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="292dp"
        android:background="@drawable/login"
        android:textColor="@color/blue"
        android:paddingLeft="10dp"
        android:ems="10"
        android:hint="@string/signupphonenumber"
        android:inputType="phone"
        android:textColorHint="@color/blue"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/signuptPassword"
        android:layout_width="382dp"
        android:layout_height="48dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="376dp"
        android:background="@drawable/login"
        android:textColor="@color/blue"
        android:paddingLeft="10dp"
        android:ems="10"
        android:hint="@string/signuppassword"
        android:inputType="textPassword"
        android:textColorHint="@color/blue"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/esignupverifyPassword"
        android:layout_width="386dp"
        android:layout_height="48dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="434dp"
        android:layout_marginBottom="250dp"
        android:paddingLeft="10dp"
        android:background="@drawable/login"
        android:textColor="@color/blue"
        android:ems="10"
        android:hint="@string/verify_password"
        android:inputType="textPassword"
        android:textColorHint="@color/blue"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/createnewaccount"
        android:layout_width="382dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="508dp"
        android:text="@string/create_new_account"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    "

</androidx.constraintlayout.widget.ConstraintLayout>