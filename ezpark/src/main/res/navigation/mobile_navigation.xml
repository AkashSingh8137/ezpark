<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="ca.ezlock.it.ezpark.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_confirmation"
        android:name="ca.ezlock.it.ezpark.ConfirmationFragment"
        android:label="Confirmation"
        tools:layout="@layout/fragment_confirmation" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="ca.ezlock.it.ezpark.ui.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profilefragment" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="ca.ezlock.it.ezpark.ui.settings.SettingsFragment"
        android:label="@string/title_settings"
        tools:layout="@layout/fragment_setting" />

</navigation>